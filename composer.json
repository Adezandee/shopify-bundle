{
    "name": "adezandee/shopify-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 Bundle to interact with a Shopify Store (API Call)",
    "keywords": ["shopify"],
    "homepage": "https://github.com/Adezandee/shopify-bundle",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Arnaud Dezandee",
            "email": "dezandee.arnaud@gmail.com"
        }
    ],

    "require": {
        "php": ">=5.3.2",
        "guzzle/guzzle": "~3.9",
        "jms/serializer-bundle": "~0.13"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "symfony/dependency-injection": "~2.3",
        "symfony/http-kernel": "~2.3",
        "symfony/config": "~2.3",
        "symfony/yaml": "~2.3"
    },

    "autoload": {
        "psr-0": { "Adezandee\\ShopifyBundle": "" }
    },

    "target-dir": "Adezandee/ShopifyBundle",

    "config": {
        "bin-dir": "bin"
    }
}
